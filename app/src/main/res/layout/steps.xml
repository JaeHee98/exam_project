<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#F8F5F1">


        <TextView
            android:id="@+id/textView"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:backgroundTint = "#FEC141"
            android:textColorHint="#A9A9A9 "
            android:textSize="27sp"
            android:textAlignment="center"
            android:gravity="center"
            android:text="오늘의 걸음수:"
            android:hint="식품 이름을 입력하세요."/>

        <TextView
            android:id="@+id/stepCountView"
            android:layout_width="80dp"
            android:layout_marginLeft="180dp"
            android:textColor="@color/black"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:text="0"
            android:textAlignment="center"
            android:gravity="center"/>

        <Button
            android:id="@+id/resetButton"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginLeft="270dp"
            android:backgroundTint="#9BA980"
            android:onClick="resetnClick"
            android:text="리셋"
            android:textSize="20sp"
            tools:ignore="OnClick" />

                <TextView
                    android:id="@+id/kcal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100dp"
                    android:gravity="center"
                    android:text="오늘 하루 소비한 칼로리!"
                    android:textAlignment="center"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/kcal2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="190dp"
                    android:gravity="center"
                    android:text="0"
                    android:textAlignment="center"
                    android:textSize="30sp" />



</RelativeLayout>